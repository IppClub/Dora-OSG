# 服务器配置
server:
  port: 8866
  enable_https: false  # Set to true to enable HTTPS
  cert_file: ""        # Path to SSL certificate file (e.g., /path/to/cert.pem)
  key_file: ""         # Path to SSL private key file (e.g., /path/to/key.pem)

# 同步配置
sync:
  interval: 24h

# 仓库配置
repos:
  - name: "dora-example"
    url:  "https://atomgit.com/ippclub/dora-example"
  - name: "dora-demo"
    url:  "https://atomgit.com/ippclub/dora-demo"
  - name: "dora-story"
    url:  "https://atomgit.com/ippclub/dora-story"
  - name: "lsd"
    url:  "https://atomgit.com/ippclub/lsd"
  - name: "lsd-spine-1x"
    url:  "https://atomgit.com/ippclub/lsd-spine-1x"
    lfs: true
  - name: "lsd-spine-2x"
    url:  "https://atomgit.com/ippclub/lsd-spine-2x"
    lfs: true

# 存储配置
storage:
  path: ./data

# 下载配置
download:
  base_url: http://localhost:8866  # Change to https://your-domain.com:8866 when HTTPS is enabled

# 限流配置
rate_limit:
  rps: 10
  burst: 20
